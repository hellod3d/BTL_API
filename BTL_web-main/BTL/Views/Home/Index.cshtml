<section style="padding-bottom: 150px;">
    <div style="text-align:center;">
        <a style="color: black; text-decoration: none;" asp-area="Home" asp-action="About"><h1>- Đọc thêm -</h1></a>
    </div>
</section>
<style>
    .btn-learn-more {
        display: inline-block;
        padding: 10px 20px; /* Điều chỉnh kích thước nút */
        background-color: #FFC107; /* Màu nền vàng */
        color: white; /* Màu chữ trắng */
        border: none; /* Không có viền */
        border-radius: 25px; /* Bo tròn góc */
        text-align: center; /* Căn giữa chữ */
        text-decoration: none; /* Không có gạch chân */
        font-size: 16px; /* Kích thước chữ */
        transition: background-color 0.3s; /* Hiệu ứng chuyển màu */
    }

        .btn-learn-more:hover {
            background-color: #e0a800; /* Màu nền khi hover */
        }

    .responsive-img {
        max-height: 100%; /* Giới hạn chiều cao tối đa */
        height: auto; /* Để chiều cao tự động */
        width: auto; /* Để chiều rộng tự động */
        max-width: 100%; /* Giới hạn chiều rộng tối đa */
    }

    .about_section .row {
        display: flex; /* Sử dụng Flexbox */
        align-items: center; /* Căn giữa theo chiều dọc */
    }

    .todays_special {
        padding: 50px 0; /* Padding cho phần Today's Special */
    }

    .special_item {
        position: relative; /* Để sử dụng cho hiệu ứng hover */
        overflow: hidden; /* Ẩn phần thừa của ảnh */
        margin-bottom: 30px; /* Khoảng cách giữa các món ăn */
    }

    .special-img {
        width: 100%; /* Đảm bảo ảnh chiếm toàn bộ chiều rộng */
        height: 200px; /* Thiết lập chiều cao cố định */
        object-fit: cover; /* Đảm bảo ảnh không bị biến dạng */
        transition: transform 0.3s ease; /* Hiệu ứng chuyển đng khi hover */
    }

    .special_item:hover .special-img {
        transform: scale(1.1); /* Phóng to ảnh khi hover */
    }

    .info {
        position: absolute; /* Đặt thông tin lên trên ảnh */
        bottom: 0; /* Căn dưới cùng */
        left: 0; /* Căn bên trái */
        right: 0; /* Căn bên phải */
        background: rgba(0, 0, 0, 0.7); /* Nền tối với độ trong suốt */
        color: white; /* Màu chữ trắng */
        padding: 10px; /* Khoảng cách bên trong */
        text-align: center; /* Căn giữa chữ */
        opacity: 0; /* Ẩn thông tin ban đầu */
        transition: opacity 0.3s ease; /* Hiệu ứng chuyển động khi hover */
    }

    .special_item:hover .info {
        opacity: 1; /* Hiện thông tin khi hover */
    }

    .team_member {
        position: relative;
        text-align: center;
        margin-bottom: 30px;
        overflow: hidden;
    }

        .team_member img {
            width: 100%;
            height: auto;
            transition: transform 0.3s ease;
        }

        .team_member:hover {
            transform: scale(1.05);
        }

            .team_member:hover img {
                transform: scale(1.1);
            }

    .social_links {
        margin-top: 10px;
    }

        .social_links a {
            margin: 0 5px;
            text-decoration: none;
            color: #000;
        }

    .todays_special .dish {
        text-align: center;
        position: relative;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .todays_special .dish img {
            transition: transform 0.5s ease;
        }

        .todays_special .dish:hover img {
            transform: scale(1.1);
        }

        .todays_special .dish h5, .todays_special .dish p {
            margin-top: 10px;
        }

    .menu_item {
        position: relative; /* Position relative for absolute positioning of info */
        overflow: hidden; /* Hide overflow */
    }

    .menu_img {
        position: relative; /* Position relative for the overlay */
    }

    .menu_info {
        position: absolute; /* Position absolute to overlay on image */
        top: 0; /* Align to top */
        left: 0; /* Align to left */
        right: 0; /* Align to right */
        bottom: 0; /* Align to bottom */
        background: rgba(0, 0, 0, 0.7); /* Dark background with transparency */
        color: white; /* White text */
        display: flex; /* Use flexbox for centering */
        flex-direction: column; /* Stack items vertically */
        justify-content: center; /* Center vertically */
        align-items: center; /* Center horizontally */
        opacity: 0; /* Initially hidden */
        transition: opacity 0.3s ease; /* Smooth transition */
    }

    .menu_item:hover .menu_info {
        opacity: 1; /* Show on hover */
    }

    .team_member {
        position: relative;
        text-align: center;
        margin-bottom: 30px;
        overflow: hidden;
    }

        .team_member img {
            width: 100%;
            height: auto;
            transition: transform 0.3s ease;
        }

        .team_member h5 {
            margin: 10px 0 5px;
        }

        .team_member p {
            margin: 0;
            font-weight: bold;
        }

    .info {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 10px;
        opacity: 0; /* Initially hidden */
        transition: opacity 0.3s ease;
    }

    .team_member:hover .info {
        opacity: 1; /* Show on hover */
    }

    .team_member:hover img {
        transform: scale(1.05); /* Slightly zoom in on hover */
    }
</style>