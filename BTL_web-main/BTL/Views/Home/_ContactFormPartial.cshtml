@model BTL.Models.Contact

<div class="contact-form-container">
    <form asp-action="ContactForm" asp-controller="Home" method="post">
        <!-- Hiển thị lỗi chung -->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Trường Name -->
        <div class="form-group">
            <label asp-for="Name" class="control-label">Tên</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Trường Email -->
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Trường Subject -->
        <div class="form-group">
            <label asp-for="Subject" class="control-label">Tiêu đề</label>
            <input asp-for="Subject" class="form-control" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>

        <!-- Trường Message -->
        <div class="form-group">
            <label asp-for="Message" class="control-label">Lời nhắn</label>
            <textarea asp-for="Message" class="form-control"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <!-- Nút gửi -->
        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-primary" />
        </div>
    </form>
</div>
