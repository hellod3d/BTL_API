    <!-- Modify the JavaScript for modal functionality -->
    <script>
        let cart = [];

        function openAddToCartModal(productId, name, price) {
            $('#productId').val(productId);
            $('#productName').val(name);
            $('#productPrice').val(price);
            $('#quantity').val(1);
            $('#addToCartModal').modal('show');
        }

        function confirmAddToCart() {
            const productId = $('#productId').val();
            const name = $('#productName').val();
            const price = parseFloat($('#productPrice').val());
            const quantity = parseInt($('#quantity').val());

            // Gửi request đến server để lưu vào database
            $.ajax({
                url: '/Home/AddToCart',
                type: 'POST',
                data: {
                    productId: productId,
                    quantity: quantity
                },
                success: function(response) {
                    if (response.success) {
                        // Add to local cart array
                        cart.push({ productId, name, price, quantity });
                        updateCartDisplay();
                        $('#addToCartModal').modal('hide');
                        
                        // Hiển thị thông báo thành công
                        Swal.fire({
                            title: 'Success!',
                            text: 'Product added to cart successfully',
                            icon: 'success',
                            confirmButtonColor: '#ffbe33'
                        });
                    } else if (response.requireLogin) {
                        window.location.href = response.loginUrl;
                    } else {
                        Swal.fire({
                            title: 'Error!',
                            text: response.message || 'Failed to add product to cart',
                            icon: 'error',
                            confirmButtonColor: '#ffbe33'
                        });
                    }
                },
                error: function() {
                    Swal.fire({
                        title: 'Error!',
                        text: 'An error occurred while adding to cart',
                        icon: 'error',
                        confirmButtonColor: '#ffbe33'
                    });
                }
            });
        }

        function toggleCart(event) {
            event.preventDefault();
            const cartForm = document.getElementById('cartForm');
            if (cartForm.style.display === 'none') {
                cartForm.style.display = 'block';
                updateCartDisplay(); // Refresh cart contents when showing
            } else {
                cartForm.style.display = 'none';
            }
        }

        function hideCart() {
            document.getElementById('cartForm').style.display = 'none';
        }

        function updateCartDisplay() {
            $.ajax({
                url: '/Home/GetCartItems',
                type: 'GET',
                success: function(data) {
                    if (data.requireLogin) {
                        window.location.href = data.loginUrl;
                        return;
                    }

                    let cartItems = $('#cartItems');
                    let cartTotal = 0;
                    cartItems.empty();

                    data.forEach((item) => {
                        cartItems.append(`
                            <li>
                                <img src="@Url.Content("~/Anh/AnhMonAn/")${$.trim(item.imageUrl)}" alt="${item.name}" style="width: 50px; height: auto; margin-right: 10px;">
                                ${item.name} - ${item.price.toLocaleString('vi-VN')} VNĐ 
                                <div class="quantity-controls">
                                    <button onclick="updateQuantity(${item.productId}, -1)">-</button>
                                    <span class="quantity-display">${item.quantity}</span>
                                    <button onclick="updateQuantity(${item.productId}, 1)">+</button>
                                </div>
                                <span class="remove-item" onclick="removeFromCart(${item.productId})">&times;</span>
                            </li>
                        `);
                        cartTotal += item.price * item.quantity;
                    });

                    $('#cartTotal').text(cartTotal.toLocaleString('vi-VN') + ' VNĐ');
                },
                error: function() {
                    Swal.fire({
                        title: 'Lỗi!',
                        text: 'Không thể tải các sản phẩm trong giỏ hàng',
                        icon: 'error',
                        confirmButtonColor: '#ffbe33'
                    });
                }
            });
        }

        function updateQuantity(productId, change) {
            const currentQuantityElement = $(`#cartItems li:has([onclick*="${productId}"]) .quantity-display`);
            let newQuantity = parseInt(currentQuantityElement.text()) + change;
            
            if (newQuantity < 1) {
                newQuantity = 1;
                return;
            }

            $.ajax({
                url: '/api/ProductAPI/update-cart/' + productId,
                type: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify({ quantity: newQuantity }),
                success: function(response) {
                    if (response.success) {
                        updateCartDisplay();
                    } else if (response.requireLogin) {
                        window.location.href = response.loginUrl;
                    } else {
                        Swal.fire({
                            title: 'Error!',
                            text: response.message || 'Failed to update quantity',
                            icon: 'error',
                            confirmButtonColor: '#ffbe33'
                        });
                    }
                },
                error: function() {
                    Swal.fire({
                        title: 'Error!',
                        text: 'An error occurred while updating quantity',
                        icon: 'error',
                        confirmButtonColor: '#ffbe33'
                    });
                }
            });
        }

        function removeFromCart(productId) {
            $.ajax({
                url: '/Home/RemoveFromCart',
                type: 'POST',
                data: { productId: productId },
                success: function(response) {
                    if (response.success) {
                        updateCartDisplay();
                        if ($('#cartItems li').length === 0) {
                            hideCart();
                        }
                    } else if (response.requireLogin) {
                        window.location.href = response.loginUrl;
                    } else {
                        Swal.fire({
                            title: 'Error!',
                            text: response.message || 'Failed to remove item from cart',
                            icon: 'error',
                            confirmButtonColor: '#ffbe33'
                        });
                    }
                },
                error: function() {
                    Swal.fire({
                        title: 'Error!',
                        text: 'An error occurred while removing item',
                        icon: 'error',
                        confirmButtonColor: '#ffbe33'
                    });
                }
            });
        }

        function checkout() {
            // Check if user is logged in by making an AJAX call
            $.ajax({
                url: '/Cart/CheckLoginStatus',
                type: 'GET',
                success: function (response) {
                    if (response.isLoggedIn) {
                        // User is logged in, proceed with checkout
                        window.location.href = '/Cart/Checkout';
                    } else {
                        // User is not logged in, redirect to login
                        window.location.href = '/Access/Login?ReturnUrl=/Cart/Checkout';
                    }
                },
                error: function () {
                    alert('An error occurred. Please try again.');
                }
            });
        }
    </script>

